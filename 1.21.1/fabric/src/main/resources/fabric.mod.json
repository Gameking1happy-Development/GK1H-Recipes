{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_source_url}",
    "issues": "${mod_issue_url}",
    "sources": "${mod_source_url}"
  },
  "license": "${license}",
  "icon": "${mod_id}.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${group}.MainFabric"
    ],
    "client": [
      "${group}.client.FabricClient"
    ],
    "server": [
      "${group}.server.FabricServer"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json",
    "${mod_id}.fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=${java_version}",
    "fzzy_config": ">=${fzzy_config_version}",
    "gk1hcore": ">=${gk1hcore_version}"
  },
  "recommends": {
    "modmenu": ">=${modmenu_version}"
  },
  "suggests": {
    "metalbundles": ">=${metalbundles_version}",
    "advancednetherite": ">=${advancednetherite_version}",
    "spikyspikes": ">=${spikyspikes_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/AwJvGzH"
      },
      "update_checker": true
    },
    "mc-publish": {
      "modrinth": "gk1h-recipes",
      "curseforge": "1384710",
      "dependencies": [
        "fabricloader@>=${fabric_loader_version}#(ignore)",
        "minecraft@${minecraft_version}#(ignore)",
        "java@>=${java_version}#(ignore)",
        "fzzy_config@>=${fzzy_config_version}(required){modrinth:fzzy-config}{curseforge:1005914}",
        "gk1hcore@>=${gk1hcore_version}(required){modrinth:gk1h-core}{curseforge:1384685}",
        "metalbundles@>=${metalbundles_version}(optional){modrinth:metal-bundles}{curseforge:891325}",
        "advancednetherite@>=${advancednetherite_version}(optional){modrinth:advanced-netherite}{curseforge:547881}",
        "spikyspikes@>=${spikyspikes_version}(optional){modrinth:spiky-spikes}{curseforge:666944}"
      ]
    }
  }
}